# GNU Screen startup file

# include default .screenrc
#source $HOME/.screenrc

# Window Group  {{{1
#-------------------------------------------------------------------------------
screen -t Main           99 //group
screen -t Monitor        98 //group
select -


# Window  {{{1
#-------------------------------------------------------------------------------
select Main
  screen -t Main 0 bash -lc "LOG_FILE=''; \
    if [ -f /var/log/syslog ]; then LOG_FILE=/var/log/syslog; \
    elif [ -f /var/log/messages ]; then LOG_FILE=/var/log/messages; fi; \
    if [ -n \"\$LOG_FILE\" ]; then sudo tail -F \"\$LOG_FILE\"; \
    else sudo journalctl -f -o short; fi | \
    perl -pe 's/^\\S+\\s+\\S+\\s+(\\S+)\\s+\\S+\\s+/$1 /' | \
    pv -L 20 -q | \
    while IFS= read -r line; do cols=\$(tput cols); echo \"\${line:0:\$cols}\"; done"
  screen 1 
  screen 2
  screen 3
  screen -t elevated 4 sudo su

select Monitor
  screen -t top 89 htop
  screen -t network 88 sudo watch -t -c -d -n3 "ss -tlnp | awk 'NR>1 {print \$1, \$4, \$6}' | sed 's/users:((\"//g' | sed 's/\".*//g' | column -t > /tmp/listen.tmp && ss -tunp | awk 'NR>1 && \$1!=\"LISTEN\" {print \$1, \$5, \$7}' | sed 's/users:((\"//g' | sed 's/\".*//g' | head -15 | column -t > /tmp/active.tmp && pr -m -t /tmp/listen.tmp /tmp/active.tmp && rm -f /tmp/listen.tmp /tmp/active.tmp"
  # exit the window group
  select -


